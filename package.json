{
  "name": "0xnote",
  "version": "0.3.0",
  "description": "轻量级 Markdown 编辑器 | 专业代码高亮",
  "author": "yeflyleaf",
  "license": "AGPL-3.0",
  "private": true,
  "main": "dist-electron/main.js",
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "lint": "eslint . --fix --cache",
    "format": "prettier --write --experimental-cli src/",
    "electron:build": "tsc -p electron/tsconfig.json",
    "electron:dev": "concurrently -k \"npm run dev\" \"npm run electron:watch\"",
    "electron:watch": "wait-on http://localhost:5173 && npm run electron:build && electron .",
    "electron:preview": "npm run build && npm run electron:build && electron .",
    "build:win": "npm run build && npm run electron:build && electron-builder --win --config.directories.output=release",
    "build:mac": "npm run build && npm run electron:build && electron-builder --mac --config.directories.output=release",
    "build:linux": "npm run build && npm run electron:build && electron-builder --linux --config.directories.output=release",
    "build:all": "npm run build && npm run electron:build && electron-builder -mwl --config.directories.output=release"
  },
  "dependencies": {
    "@codemirror/commands": "^6.10.1",
    "@codemirror/lang-markdown": "^6.5.0",
    "@codemirror/language-data": "^6.5.2",
    "@codemirror/state": "^6.5.4",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@codemirror/view": "^6.39.11",
    "@types/dompurify": "^3.0.5",
    "@types/markdown-it": "^14.1.2",
    "codemirror": "^6.0.2",
    "dompurify": "^3.3.1",
    "github-markdown-css": "^5.8.1",
    "lodash-es": "^4.17.22",
    "markdown-it": "^14.1.0",
    "pinia": "^3.0.4",
    "vue": "^3.5.26",
    "vue-router": "^4.6.4"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "@tsconfig/node24": "^24.0.3",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^24.10.4",
    "@vitejs/plugin-vue": "^6.0.3",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/tsconfig": "^0.8.1",
    "concurrently": "^9.2.1",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "eslint": "^9.39.2",
    "eslint-plugin-vue": "~10.6.2",
    "jiti": "^2.6.1",
    "npm-run-all2": "^8.0.4",
    "prettier": "3.7.4",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.9.3",
    "vite": "^7.3.0",
    "vite-plugin-vue-devtools": "^8.0.5",
    "vue-tsc": "^3.2.2",
    "wait-on": "^9.0.3"
  }
}
